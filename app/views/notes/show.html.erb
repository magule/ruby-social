<div class="container">
  <div class="card shadow">
    <div class="card-body">
      <h1 class="card-title mb-4"><%= @note.title %></h1>
      <p class="card-text"><%= @note.content %></p>

      <div class="row mt-4">
        <div class="col-md-6">
          <p><strong>Collection:</strong> <%= link_to @note.collection.name, collection_path(@note.collection) %></p>
          <small class="text-muted">User: <%= @note.username %></small>
        </div>
        <% if @note.picture.attached? %>
          <div class="col-md-6 text-md-end">
            <%= image_tag @note.picture, class: "img-fluid" %>
          </div>
        <% end %>
      </div>

      <hr class="my-4">

      <div class="d-flex justify-content-end">
        <%= link_to "Edit", edit_note_path(@note), class: "btn btn-secondary me-2" %>
        <%= button_to "Delete", @note, method: :delete, data: { confirm: "Are you sure you want to delete this note?" }, class: "btn btn-danger" %>
      </div>
    </div>
  </div>

  <div class="mt-4 text-center">
    <%= link_to "Back to notes", notes_path, class: "btn btn-primary" %>
  </div>
</div>
